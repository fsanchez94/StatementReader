[flake8]
# Maximum line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    node_modules,
    frontend,
    temp,
    migrations,
    backends/django/*/migrations

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # E501: line too long (handled by max-line-length)
    E501

# Complexity settings
max-complexity = 10

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401,F403
    # Allow star imports in conftest
    conftest.py:F401,F403
    # Settings files can have imports that look unused
    settings.py:F401,F405
